<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iconInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_warning">

            </ImageView>

            <TextView
                android:id="@+id/winTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Hello"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_toEndOf="@id/iconInfo">

            </TextView>

            <TextView
                android:id="@+id/magnitude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@id/iconInfo"
                android:layout_below="@id/winTitle"
                android:text="Magnitude">

            </TextView>

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/magnitude"
                android:layout_alignBottom="@id/magnitude"
                android:layout_marginLeft="8dp"
                android:text="More Info"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary">

            </Button>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>